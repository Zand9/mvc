{% extends "base.html.twig" %}

{% block title %}Shuffle | MVC{% endblock %}

{% block body %}
    <h1>Shuffle</h1>
    <h3>Alla kort har samlats in och kortleken har blandats.</h3>
    <p><a href="{{ path('card') }}">Tillbaka</a> |
        <a href="{{ path('card_deck') }}">Sortera korten</a> |
        <a href="{{ path('card_deck_shuffle') }}">Blanda om</a> |
        <a href="{{ path('card_deck_draw') }}">Dra ett kort</a>
    </p>
    
    <div class="deck-container">
        {% for card in cards %}

        <span class="card-box {{ card.getColor() }}">
            {{ card.getUnicode() }}
        </span>

        {% endfor %}
    </div>

    <p><a href="{{ path('card') }}">Tillbaka</a></p>
{% endblock %}