<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
            <h1 class="site-title">Macm16's Symphony Site</h1>
        </header>
        <nav>
        <ul>
            <li><a href="{{ path('home') }}">Home</a></li>
            <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
            <li><a href="{{ path('about') }}">About</a></li>
            <li><a href="{{ path('report') }}">Report</a></li>
        </ul>
    </nav>
    <main>
        {% block body %}{% endblock %}
    </main>
    </body>
</html>
