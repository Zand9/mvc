<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
            <h1 class="site-title">Macm16's Symphony Site</h1>
        </header>
        <nav>
        <ul>
            <li><a href="{{ path('home') }}">Home</a></li>
            <li><a href="{{ path('lucky') }}">Lucky</a></li>
       <!-- <li><a href="{{ path('lucky_number') }}">Lucky number</a></li> -->
            <li><a href="{{ path('about') }}">About</a></li>
            <li><a href="{{ path('api') }}">API</a></li>
            <li><a href="{{ path('report') }}">Report</a></li>
        </ul>
    </nav>
    <div class="layout">
        <main>
            {% block body %}{% endblock %}
        </main>

        {% block aside %}{% endblock %}

        {% block footer %}
        <footer>
            &copy; Copyright 2025 by <a href="https://www.student.bth.se/~macm16/dbwebb-kurser/">Macm16</a>
        </footer>
        {% endblock %}
    </div>
    </body>
</html>
